<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main.xml"
    app:startDestination="@id/chooseOptionFragment">

    <fragment
        android:id="@+id/charactersDataFragment"
        android:name="com.example.apollographqldemo.ui.allCharacters.CharactersDataFragment"
        android:label="Characters list"
        tools:layout="@layout/fragment_characters_data" />
    <fragment
        android:id="@+id/singleCharacterFragment"
        android:name="com.example.apollographqldemo.ui.singleCharacter.SingleCharacterFragment"
        android:label="Single Character"
        tools:layout="@layout/fragment_single_character" >
        <argument
            android:name="characterId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/chooseOptionFragment"
        android:name="com.example.apollographqldemo.ui.chooseOption.ChooseOptionFragment"
        android:label="Select Option"
        tools:layout="@layout/fragment_choose_option" >
        <action
            android:id="@+id/action_chooseOptionFragment_to_singleCharacterFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_chooseOptionFragment_to_charactersListFragment"
            app:destination="@id/charactersDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.apollographqldemo.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_singleCharacterFragment"
            app:destination="@id/singleCharacterFragment" />
    </fragment>
</navigation>